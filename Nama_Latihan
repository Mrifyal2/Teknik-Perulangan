#include <iostream>
#include <conio.h>
using namespace std;

int main () {
   int x, y, z, baris;
   
   cout << "Masukkan Jumlah Baris";
   cin >>baris;
   
   for(x=baris; x>=0; x--) {
    for(y=x; y>=0; y--) {
      cout << " ";
   }
   
   for(z=1; z<=baris-x; z++){
    cout <<"*";
   }
   
   for(z=1; z<baris-x; z++){
    cout <<"*";
   }
   cout <<endl;
 }
 _getche();
 return 0;
}
